
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :put }, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  <h2>Change your password</h2>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

    <%= f.input :password, required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) , label: false, placeholder: "New Password", input_html:{class: "form-control"} %>
    <%= f.input :password_confirmation, label: false, placeholder: "Confirm Your Password", input_html:{class: "form-control"} %>

    <%= f.button :submit, "Change My Password", class: "btn btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>



